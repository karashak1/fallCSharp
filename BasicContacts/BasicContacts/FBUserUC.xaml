<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BasicContacts" x:Class="BasicContacts.FBUserUC" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="300" Loaded="UserControl_Loaded">

    <Grid x:Name="grid1" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="108.8"/>
            <ColumnDefinition Width="Auto" MinWidth="244.8"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <Label Content="bio:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,3,0,3" Grid.Row="0" VerticalAlignment="Center" Height="26" Width="29"/>
        <TextBox x:Name="bioTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="24" Margin="2.2,4,0,4" Grid.Row="0" Text="{Binding bio, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120"/>
        <Label Content="email:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,3,0,3" Grid.Row="1" VerticalAlignment="Center" Height="26" Width="42"/>
        <TextBox x:Name="emailTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="24" Margin="2.2,4,0,4" Grid.Row="1" Text="{Binding email, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120"/>
        <Label Content="first name:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,3,0,3" Grid.Row="2" VerticalAlignment="Center" Height="26" Width="66"/>
        <TextBox x:Name="first_nameTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="24" Margin="2.2,4,0,4" Grid.Row="2" Text="{Binding first_name, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120"/>
        <Label Content="gender:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,3,0,3" Grid.Row="3" VerticalAlignment="Center" Height="26" Width="50"/>
        <TextBox x:Name="genderTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="24" Margin="2.2,4,0,4" Grid.Row="3" Text="{Binding gender, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120"/>
        <Label Content="id:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,3,0,3" Grid.Row="4" VerticalAlignment="Center" Height="26" Width="22"/>
        <TextBox x:Name="idTextBox1" Grid.Column="1" HorizontalAlignment="Left" Height="24" Margin="2.2,4,0,4" Grid.Row="4" Text="{Binding id, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120"/>
        <Label Content="last name:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,3,0,3" Grid.Row="5" VerticalAlignment="Center" Height="26" Width="64"/>
        <TextBox x:Name="last_nameTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="24" Margin="2.2,4,0,4" Grid.Row="5" Text="{Binding last_name, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120"/>
        <Label Content="link:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,3,0,3" Grid.Row="6" VerticalAlignment="Center" Height="26" Width="30"/>
        <TextBox x:Name="linkTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="24" Margin="2.2,4,0,4" Grid.Row="6" Text="{Binding link, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120"/>
        <Label Content="locale:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,3,0,3" Grid.Row="7" VerticalAlignment="Center" Height="26" Width="43"/>
        <TextBox x:Name="localeTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="24" Margin="2.2,4,0,4" Grid.Row="7" Text="{Binding locale, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120"/>
        <Label Content="middle name:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,3,0,3" Grid.Row="8" VerticalAlignment="Center" Height="26" Width="82"/>
        <TextBox x:Name="middle_nameTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="24" Margin="2.2,4,0,4" Grid.Row="8" Text="{Binding middle_name, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120"/>
        <Label Content="name:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,3,0,3" Grid.Row="9" VerticalAlignment="Center" Height="26" Width="42"/>
        <TextBox x:Name="nameTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="24" Margin="2.2,4,0,4" Grid.Row="9" Text="{Binding name, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120"/>
        <Label Content="political:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,3,0,3" Grid.Row="10" VerticalAlignment="Center" Height="26" Width="54"/>
        <TextBox x:Name="politicalTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="24" Margin="2.2,4,0,4" Grid.Row="10" Text="{Binding political, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120"/>
        <Label Content="quotes:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,3,0,3" Grid.Row="11" VerticalAlignment="Center" Height="26" Width="50"/>
        <TextBox x:Name="quotesTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="24" Margin="2.2,4,0,4" Grid.Row="11" Text="{Binding quotes, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120"/>
        <Label Content="religion:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,3,0,3" Grid.Row="12" VerticalAlignment="Center" Height="26" Width="53"/>
        <TextBox x:Name="religionTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="24" Margin="2.2,4,0,4" Grid.Row="12" Text="{Binding religion, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120"/>
        <Label Content="timezone:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,3,0,3" Grid.Row="13" VerticalAlignment="Center" Height="26" Width="62"/>
        <TextBox x:Name="timezoneTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="24" Margin="2.2,4,0,4" Grid.Row="13" Text="{Binding timezone, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120"/>
        <Label Content="updated time:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,3,0,3" Grid.Row="14" VerticalAlignment="Center" Height="26" Width="83"/>
        <DatePicker x:Name="updated_timeDatePicker" Grid.Column="1" HorizontalAlignment="Left" Margin="2.2,4,0,4" Grid.Row="14" SelectedDate="{Binding updated_time, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Height="24" Width="103"/>
        <Label Content="username:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,3,0,3" Grid.Row="15" VerticalAlignment="Center" Height="26" Width="64"/>
        <TextBox x:Name="usernameTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="24" Margin="2.2,4,0,4" Grid.Row="15" Text="{Binding username, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120"/>
        <Label Content="verified:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,3,0,3" Grid.Row="16" VerticalAlignment="Center" Height="26" Width="51"/>
        <CheckBox x:Name="verifiedCheckBox" Content="" Grid.Column="1" HorizontalAlignment="Left" IsChecked="{Binding verified, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Margin="2.2,8,0,8" Grid.Row="16" VerticalAlignment="Center" Height="16" Width="16"/>
        <Grid DataContext="{Binding Location}" Grid.Row="17" Margin="0,0,144.6,0" Grid.ColumnSpan="2" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Content="id:" Grid.Column="0" HorizontalAlignment="Left" Margin="3" Grid.Row="0" VerticalAlignment="Center"/>
            <TextBox x:Name="idTextBox2" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="3" Grid.Row="0" Text="{Binding location.id, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120"/>
            <Label Content="name:" Grid.Column="0" HorizontalAlignment="Left" Margin="3" Grid.Row="1" VerticalAlignment="Center"/>
            <TextBox x:Name="nameTextBox1" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="3" Grid.Row="1" Text="{Binding location.name, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120"/>
        </Grid>
    </Grid>
</UserControl>
