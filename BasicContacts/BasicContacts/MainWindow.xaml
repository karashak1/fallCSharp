<Window x:Class="BasicContacts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="21*"/>
            <RowDefinition Height="139*"/>
        </Grid.RowDefinitions>
        <TextBox Text="{Binding Text}" HorizontalAlignment="Stretch" Margin="0,0,80,10" TextWrapping="Wrap" VerticalAlignment="Stretch"/>
        <Button Content="Button" HorizontalAlignment="Right" Margin="0,0,0,10" VerticalAlignment="Stretch" Width="75" Click="Button_Click"/>
        <GridSplitter HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Height="10" />
        <ListBox ItemsSource="{Binding List}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1"/>

    </Grid>
</Window>
