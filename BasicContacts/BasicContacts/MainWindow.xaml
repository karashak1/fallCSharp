<Window x:Class="BasicContacts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="62*"/>
            <RowDefinition Height="261*"/>
        </Grid.RowDefinitions>
        <TextBox Text="{Binding Text}" HorizontalAlignment="Stretch" Height="23" Margin="45,29,0,0" TextWrapping="Wrap"  VerticalAlignment="Stretch" Width="120"/>
        <Button Content="Button" HorizontalAlignment="Right" Margin="0,10,0.4,260.4" VerticalAlignment="Stretch" Width="75" Grid.RowSpan="1"/>
        <GridSplitter HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Height="10 />"
        <ListBox ItemSource="{Binding List}"  HorizontalAlignment="Strech"  VerticalAlignment="Strech" Grid.Row="2"/>

    </Grid>
</Window>
