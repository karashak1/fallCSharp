<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:FinalDataLayer="clr-namespace:FinalDataLayer;assembly=FinalDataLayer" mc:Ignorable="d" x:Class="CSharpFinal.MainWindow"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    
    <Grid>
        <TabControl HorizontalAlignment="Left" Height="312" Margin="0,10,0,0" VerticalAlignment="Top" Width="518">
            <TabItem Header="Contacts">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </TabItem>
            <TabItem Header="Companies">
                <Grid Background="#FFE5E5E5" DataContext="{StaticResource companyViewSource}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
